{
    "name": "galaxon/collections",
    "description": "PHP classes for typed collections.",
    "type": "library",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "../Core"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-ctype": "*",
        "ext-mbstring": "*",
        "galaxon/core": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Galaxon\\Collections\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Galaxon\\Collections\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix": "vendor/bin/phpcbf",
        "check": "vendor/bin/phpcs",
        "analyse": "vendor/bin/phpstan analyse -l 9",
        "test": "vendor/bin/phpunit",
        "test:coverage": "php -d xdebug.mode=coverage -r \"require 'vendor/bin/phpunit';\" -- --configuration phpunit.xml --do-not-cache-result --coverage-clover build/logs/clover.xml --coverage-html build/coverage",
        "quality": [
            "@fix",
            "@check",
            "@analyse",
            "@test"
        ]
    }
}
